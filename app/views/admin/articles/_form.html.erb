<%= text_field :title, :size => 50, :label => 'Title:' %>
<%= text_area :content, :rows => 20, :cols => 100, :label => 'Content:' %>
<p>
  <span class="mock_label">Published?</span>
  <%= check_box :published %>
</p>

<p>
  <span class="mock_label">Formatter</span>
  <%= select :formatter, :collection => Hooks::Formatters.available_formatters, :selected => (@article.new_record? ? (User.default_formatter || "default") : @article.formatter) %>
</p>

<%= render_plugin_views "article_form_fields" %>
